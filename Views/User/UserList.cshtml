@model List<User>

@{
  ViewBag.Title = "List of Users";
  Layout = "_Layout";
}
<!-- Page Header -->
<div class="dt-page__header">
  <h2 class="dt-page__title">@ViewBag.Title</h2>
</div>
<!-- /page header -->
<!-- Grid -->
<div class="row">
  @foreach (var item in Model)
  {
    <!-- Grid Item -->
    <div class="col-xl-12">

      <!-- Card -->
      <div class="dt-card">

        <!-- Card Body -->
        <div class="dt-card__body">

          <!-- List -->
          <div class="d-sm-flex flex-sm-row">

            <!-- User Avatar-->
            <img class="dt-avatar size-60 mr-6 mb-6 mb-sm-0" src="https://randomuser.me/api/portraits/med/men/@(item.Id).jpg" alt="@item.Handle">
            <!-- /user avatar-->
            <!-- Content -->
            <div class="flex-1 overflow-hidden mb-6 mb-sm-0 pr-sm-3">
              <div class="text-truncate">
                <h4 class="d-inline-block mb-3 pr-4 mr-3 border-right">@item.FirstName @item.LastName</h4>
                <p class="d-inline-block mb-3">@item.Profession</p>
              </div>
              <p class="text-truncate text-light-gray">
                Cicero famously orated against his political opponent Lucius Sergius
                Catilina...
              </p>
              <div class="d-flex flex-sm-row flex-column">
                <div class="mb-4 mb-sm-0">
                  <span class="mr-4 mr-md-6 text-nowrap">$@item.Rate<span class="text-light-gray">/hr</span></span>
                  <span class="mr-4 mr-md-6 text-nowrap">$@item.Earning <span class="text-light-gray">earned</span></span>
                </div>
              </div>
            </div>
            <!-- /content -->

            <div class="min-w-120">
              <a href="javascript:void(0)" class="btn btn-primary btn-block">Hire me</a>
              <a href="javascript:void(0)" class="btn btn-outline-light text-light-gray btn-block">
                <span>Message</span>
              </a>
            </div>

          </div>
          <!-- /list -->

        </div>
        <!-- /card body -->

      </div>
      <!-- /card -->

    </div>
    <!-- /grid item -->
  }
</div>