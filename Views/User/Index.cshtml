@model List<User>

@{
  ViewBag.Title = "Users";
  Layout = "_Layout";
}

<!-- Page Header -->
<div class="dt-page__header">
  <h1 class="dt-page__title">@ViewBag.Title</h1>
</div>
<!-- /page header -->
<!-- Grid -->
<div class="row">

  <!-- Grid Item -->
  <div class="col-xl-6">

    <!-- Entry Header -->
    <div class="dt-entry__header">

      <!-- Entry Heading -->
      <div class="dt-entry__heading">
        <h3 class="dt-entry__title">Simple Table</h3>
      </div>
      <!-- /entry heading -->

    </div>
    <!-- /entry header -->
    <!-- Card -->
    <div class="dt-card overflow-hidden">

      <!-- Card Body -->
      <div class="dt-card__body p-0">

        <!-- Tables -->
        <div class="table-responsive">
          <table class="table table-dark table-hover mb-0">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th class="text-uppercase" scope="col">First Name</th>
                <th class="text-uppercase" scope="col">Last Name</th>
                <th class="text-uppercase" scope="col">Handle</th>
              </tr>
            </thead>
            <tbody>
            @foreach (var user in Model)
            {
              <tr>
                <th scope="row">@user.Id</th>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td><a href="javascript:void(0)" class="btn-link">@(user.Handle)</a></td>
              </tr>
            }
            </tbody>
          </table>
        </div>
        <!-- /tables -->

      </div>
      <!-- /card body -->

    </div>
    <!-- /card -->

  </div>
  <!-- /grid item -->
  <!-- Grid Item -->
  <div class="col-xl-6">

    <!-- Entry Header -->
    <div class="dt-entry__header">

      <!-- Entry Heading -->
      <div class="dt-entry__heading">
        <h3 class="dt-entry__title">Simple Table Inside Card</h3>
      </div>
      <!-- /entry heading -->

    </div>
    <!-- /entry header -->
    <!-- Card -->
    <div class="card overflow-hidden">

      <!-- Card Header -->
      <div class="card-header bg-transparent">
        <h3 class="card-title">Card Title</h3>
        <h5 class="card-subtitle mb-0">Sub heading of card</h5>
      </div>
      <!-- /card header -->
      <!-- Card Body -->
      <div class="card-body pt-0">

        <!-- Tables -->
        <div class="table-responsive">
          <table class="table mb-0">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th class="text-uppercase" scope="col">First Name</th>
                <th class="text-uppercase" scope="col">Last Name</th>
                <th class="text-uppercase" scope="col">Handle</th>
              </tr>
            </thead>
            <tbody>
            @foreach (var user in Model)
            {
              <tr>
                <th scope="row">@user.Id</th>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td><a href="javascript:void(0)" class="btn-link">@user.Handle</a></td>
              </tr>
            }
              
            </tbody>
          </table>
        </div>
        <!-- /tables -->

      </div>
      <!-- /card body -->

    </div>
    <!-- /card -->

  </div>
  <!-- /grid item -->

</div>

